<%- contentFor('body') %>
    <h1>Customers</h1>

    <h2>Search</h2>
    <form method="GET">
        <div>
            <label>First Name</label>
            <input type="text" name="first_name" class="form-control" value="<%= searchParams.first_name || '' %>" />
        </div>
        <div>
            <label>Last Name</label>
            <input type="text" name="last_name" class="form-control" value="<%= searchParams.last_name || '' %>" />
        </div>
        <div>
            <label>Email</label>
            <input type="text" name="email" class="form-control" value="<%= searchParams.email || '' %>" />
        </div>
        <input type="submit" value="Search" class="btn btn-primary btn-sm mt-3 mb-3" />
    </form>

    <table class="table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Company</th>
            <th>Action</th>
        </tr>
        <% customers.forEach(function(customer) { %>
            <tr>
                <td>
                    <%= customer.Customers.first_name %>
                </td>
                <td>
                    <%= customer.Customers.last_name %>
                </td>
                <td>
                    <%= customer.Customers.email %>
                </td>
                <td>
                    <%= customer.Companies.name %>
                </td>
                <td>
                    <a href="/customers/<%= customer.Customers.customer_id %>/edit" class="btn btn-primary">Edit</a>
                    <a href="/customers/<%= customer.Customers.customer_id %>/delete" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            <% }); %>
    </table>