<%- contentFor('body') %>

<h1>Search Results for: "<%= query %>"</h1>

<a href="/products">Back to Products</a>

<% if (results.length === 0) { %>
    <p>No products found matching your query.</p>
<% } else { %>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Matching Content</th>
                <th>Relevance</th>
                <th>Matching Chunks</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% results.forEach(function(result){ %>
                <tr>
                    <td>
                        <%= result.name %>
                    </td>
                    <td>
                        <%= result.description %>
                    </td>
                    <td>
                        <%= result.best_chunk_text.substring(0, 150) %>...
                    </td>
                    <td>
                        <%= (1 - result.best_distance).toFixed(3) %>
                    </td>
                    <td>
                        <%= result.relevant_chunk_count %>
                    </td>
                    <td>
                        <a href="/products/<%= result.product_id %>">View</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } %>
