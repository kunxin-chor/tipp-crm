<%- contentFor('body') %>

<h1>Products</h1>

<form action="/products/search" method="get" style="margin-bottom: 20px;">
    <input type="text" name="q" placeholder="Search products by natural language..." style="width: 400px; padding: 8px;" required>
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>PDF</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product){ %>
            <tr>
                <td>
                    <%= product.Products.name %>
                </td>
                <td>
                    <%= product.Products.description %>
                </td>
                <td>
                    <%= product.PDF.filename %>
                </td>
                <td>
                     <a href="/products/<%= product.Products.product_id %>">View</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>